{{ form_start(form, { 'action': path('site_contact'), 'attr': { 'id': 'js-contact-form' }}) }}

    <div class="form-group">
        <label for="exampleInputPassword1">{{'site.form.name.label'|trans({}, 'easy_cms')}}</label>
        {{ form_widget(form.name, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">{{'site.form.email.label'|trans({}, 'easy_cms')}}</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">{{'site.form.message.label'|trans({}, 'easy_cms')}}</label>
        {{ form_widget(form.message, {'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-check">

        {{ form_widget(form.acceptsNotifications, { 'attr': {'class': 'form-check-input'} })}}

        {{ form_label(form.acceptsNotifications) }}
    </div>

    {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary' }}) }}
{{ form_end(form) }}

{% block javascripts %}
    {{ encore_entry_script_tags('contact') }}
{% endblock %}


